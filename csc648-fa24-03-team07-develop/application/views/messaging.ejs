    <h2 class="default">Messaging</h2>

    <!--With the help from ChatGPT assistance-->
    <form id="messagingForm" method="POST">


        <label for="message">Message:</label>
        <textarea id="message" name="message" rows="4" required></textarea>
        <br><br>

        <button>Submit</button>
        <br><br>
    </form>




	<script>
    const tutorRegUserId = "<%= tutor.reg_user_id %>";
	document.getElementById("messagingForm").addEventListener('submit', (event) => {
        const message = document.getElementById("message").value;

        
        if (message.length > 140) {
            event.preventDefault();  
            alert("Message cannot be longer than 140 characters.");
            return; 
        }

        const formData = new FormData(event.target); 
        fetch('/messaging/${tutorRegUserId}', {
            method: 'POST',
            body: formData 
        })
        .then(response => {})
        .catch(error => {
            // Handle any errors
            console.error('Error:', error);
        });
    });
    </script>
